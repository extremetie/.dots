general {
    interval = 5
}

order += "disk /"
order += "memory"
order += "load"
order += "cpu_usage"
order += "volume master"
order += "battery all"
order += "time"

disk / {
    format = "ROOT %used / %total"
}

memory {
    format = "RAM %used / %total"
}

load {
    format = "LOAD %1min %5min %15min"
}

cpu_usage {
    format = "CPU %usage"
}

volume master {
    format = "VOL %volume"
    format_muted = "VOL M(%volume)"
}

battery all {
    format = "%status %percentage %consumption"
    format_down = ""
    last_full_capacity = true
    low_threshold = 10
    threshold_type = percentage
}

time {
    format = "%a %F %T"
}
